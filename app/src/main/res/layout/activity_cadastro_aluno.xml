<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imhere.imhere.CadastroAlunoActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNomeAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome:" />

    <EditText
        android:id="@+id/etNomeAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvEmailAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail:" />

    <EditText
        android:id="@+id/etEmailAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDataNasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datade Nascimento:" />

    <com.vicmikhailau.maskededittext.MaskedEditText
        android:id="@+id/etDataNasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mask="##/##/####" />

    <Button
        android:id="@+id/btnCadastraAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Cadastrar"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"/>



</LinearLayout>
